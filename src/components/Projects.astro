---
import XTTitle from "./XTTitle.astro";
import XTCard from "./XTCard.astro";
import XTFooter from "./XTFooter.astro";

const projects = [
  {
    id: 1,
    title: "Título",
    tags: ["Desarrollo Web", "Diseño Web"],
    src: "mock1.png",
  },
  {
    id: 2,
    title: "Título",
    tags: ["Desarrollo Web", "Diseño Web"],
    src: "mock2.png",
  },
  {
    id: 3,
    title: "Título",
    tags: ["Desarrollo Web", "Diseño Web"],
    src: "mock3.png",
  },
];
---

<div class="bg-cream flex flex-col text-cream py-20 md:py-0 px-8 md:px-0">
  <main
    class="mx-auto min-h-screen flex flex-col justify-around items-center gap-16"
  >
    <XTTitle
      title="Conoce nuestra filosofía de trabajo"
      subtitle="Nos enfocamos en crear experiencias digitales que no solo sean visualmente atractivas, sino también funcionales y fáciles de usar"
      color="tertiary"
    />

    <section
      class="w-full flex flex-col items-center justify-center gap-8 md:gap-10 my-10"
    >
      {
        projects.map((project) => (
          <XTCard title={project.title} tags={project.tags} src={project.src} />
        ))
      }
    </section>

    <XTFooter
      title="¿Quieres ver más?"
      subtitle="Explora nuestra galería de proyectos para descubrir más sobre nuestro trabajo y cómo podemos ayudarte a alcanzar tus objetivos digitales."
      buttonText="Ver nuestros proyectos"
    />
  </main>
</div>

<style>
  .gradient {
    background-image: linear-gradient(
      180deg,
      hsl(215deg 50% 23%) 1%,
      hsl(212deg 47% 26%) 39%,
      hsl(209deg 44% 30%) 47%,
      hsl(206deg 40% 34%) 50%,
      hsl(204deg 37% 38%) 51%,
      hsl(201deg 34% 42%) 51%,
      hsl(199deg 30% 47%) 50%,
      hsl(197deg 28% 51%) 49%,
      hsl(194deg 30% 56%) 49%,
      hsl(192deg 33% 61%) 50%,
      hsl(189deg 35% 66%) 53%,
      hsl(186deg 38% 71%) 61%,
      hsl(182deg 43% 76%) 99%
    );
  }
</style>
