---
import { Button } from "./ui/button.tsx";
import { ArrowRight, Rocket, CircleSmall } from "@lucide/astro";
import { Card, CardContent, CardFooter } from "@/components/ui/card";
import { Badge } from "./ui/badge";

const { project } = Astro.props;
const { title, tags, src, icon: Icon } = project;
---

<Card className="bg-cream p-6 shadow-lg">
  <div class="flex flex-col md:flex-row gap-6 md:h-[320px]">
    <!-- Imagen -->
    <div class="relative w-full md:w-[550px] h-[240px] md:h-full">
      <div class="absolute top-3 left-3 flex flex-wrap gap-2 z-10">
        {
          tags &&
            tags.map((tag: string) => (
              <Badge className="bg-cream text-tertiary">{tag}</Badge>
            ))
        }
      </div>
      <img
        src={src}
        alt={title}
        class="w-full h-full object-cover rounded-lg"
      />
    </div>

    <!-- Contenido -->
    <div class="flex flex-col justify-between w-full md:max-w-sm">
      <CardContent className="p-0 flex-1 flex flex-col gap-4">
        <div>
          <div class="flex items-center gap-2 mb-3">
            {project.icon && <CircleSmall class="w-6 h-6 text-tertiary" />}
            <h3 class="text-tertiary font-semibold text-xl">
              Nuestra filosofía
            </h3>
          </div>
          <div class="flex flex-col gap-2 text-tertiary/90 text-[0.95rem]">
            <p>{project.philosophy}</p>
            <p>{project.description}</p>
          </div>
        </div>
      </CardContent>

      <CardFooter className="p-0 mt-4">
        <Button variant="tech" size="sm">
          {Icon && <Icon class="w-4 h-4 text-cream mr-1" />}
          <span class="text-cream">Ver más</span>
          <ArrowRight size={32} class="ml-2 h-4 w-4" />
        </Button>
      </CardFooter>
    </div>
  </div>
</Card>
