---
import { Button } from "./ui/button.tsx";
import { ArrowRight, Rocket, CircleSmall } from "@lucide/astro";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "./ui/badge";

const { project, reverse = false } = Astro.props;
const { title, tags, src, icon: Icon } = project;
---

<article
  class={`flex flex-col md:flex-row gap-4 md:gap-8 bg-cream p-0 md:p-0 h-[320px]`}
>
  <div class="relative w-full md:w-[550px] h-[320px]">
    <div class="absolute top-3 left-3 flex flex-wrap gap-2 z-10">
      {
        tags &&
          tags.map((tag: string) => (
            <Badge className="bg-cream text-tertiary">{tag}</Badge>
          ))
      }
    </div>
    <img src={src} alt={title} class="w-full h-full object-cover rounded-lg" />
  </div>

  <div
    class="flex flex-col justify-between items-start max-w-xs md:max-w-sm h-[320px] p-0 overflow-hidden"
  >
    <div class="max-h-[240px] w-full">
      <div class="flex flex-row gap-2 items-center mb-3">
        {project.icon && <CircleSmall class="w-6 h-6 text-tertiary" />}
        <h3 class="text-tertiary font-semibold text-xl">Nuestra filosofía</h3>
      </div>
      <div class="flex flex-col gap-2">
        <p class="text-tertiary/90 text-[0.95rem]">{project.philosophy}</p>
        <p class="text-tertiary/90 text-[0.95rem]">{project.description}</p>
      </div>
    </div>

    <Button variant="tech" size="sm">
      {project.icon && <Icon class="w-4 h-4 text-cream mr-1" />}
      <span class="text-cream">Ver más</span>
      <ArrowRight class="w-4 h-4 text-cream ml-2" />
    </Button>
  </div>
</article>
