---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="lg:flex p-2 gap-5 justify-between md:justify-around">
  <Astronav>
    <div class="flex justify-between md:justify-around w-auto items-center">
      <h1>parridev</h1>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-tertiary" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex lg:items-center">
      <ul
        class="flex flex-col lg:flex-row lg:gap-5 text-tertiary font-semibold"
      >
        <li>
          <a
            href="/portfolio_fp/"
            class="relative px-2 py-1 transition-colors duration-300 hover:text-primary after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-lightblue after:transition-all after:duration-300 hover:after:w-full"
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="/portfolio_fp/about"
            class="relative px-2 py-1 transition-colors duration-300 hover:text-primary after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-lightblue after:transition-all after:duration-300 hover:after:w-full"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="#proyectos"
            class="relative px-2 py-1 transition-colors duration-300 hover:text-primary after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-lightblue after:transition-all after:duration-300 hover:after:w-full"
          >
            Proyectos
          </a>
        </li>
        <li>
          <a
            href="#contact"
            class="relative px-2 py-1 transition-colors duration-300 hover:text-primary after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-lightblue after:transition-all after:duration-300 hover:after:w-full"
          >
            Contacto
          </a>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
