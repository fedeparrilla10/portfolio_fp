---
// importaciones
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="relative z-10">
  <div
    class="lg:flex p-0.5 px-4 gap-5 items-center pt-3 justify-between md:justify-around bg-tertiary text-cream"
  >
    <Astronav>
      <div class="flex justify-between md:justify-around w-auto items-center">
        <h1>parridev</h1>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4" />
        </div>
      </div>
      <MenuItems class="hidden lg:flex lg:items-center">
        <ul class="flex flex-col lg:flex-row lg:gap-5 text-cream">
          <li>
            <a
              href="/portfolio_fp/"
              class="relative px-2 py-1 transition-colors duration-300 hover:text-lightblue after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-tertiary after:transition-all after:duration-300 hover:after:w-full"
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/portfolio_fp/about"
              class="relative px-2 py-1 transition-colors duration-300 hover:text-lightblue after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-tertiary after:transition-all after:duration-300 hover:after:w-full"
            >
              About
            </a>
          </li>
          <li>
            <a
              href="#proyectos"
              class="relative px-2 py-1 transition-colors duration-300 hover:text-lightblue after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-tertiary after:transition-all after:duration-300 hover:after:w-full"
            >
              Proyectos
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="relative px-2 py-1 transition-colors duration-300 hover:text-lightblue after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-tertiary after:transition-all after:duration-300 hover:after:w-full"
            >
              Contacto
            </a>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </div>

  <!-- Borde con onda inferior -->
  <div class="w-full h-6 overflow-hidden rotate-180">
    <svg
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
      class="w-full h-full"
    >
      <path
        d="M0,40 C180,100 280,0 540,40 C800,80 1000,0 1200,40 L1200,120 L0,120 Z"
        class="fill-lightblue"></path>
      <path
        d="M0,60 C200,20 400,100 600,60 C800,20 1000,80 1200,60 L1200,120 L0,120 Z"
        class="fill-tertiary"></path>
    </svg>
  </div>
</header>
