---
const { name, role, image, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <div class="w-48 h-48 rounded-full overflow-hidden mb-4">
    <img
      src={image || "/placeholder.svg"}
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
  <h3 class="text-xl font-bold text-primary mb-1">{name}</h3>
  <p class="text-secondary font-medium mb-3">{role}</p>
  <p class="text-gray-700 max-w-xs">{description}</p>
</div>
