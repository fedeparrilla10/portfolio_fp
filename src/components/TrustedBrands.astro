---

<Section backgroundColor="tertiary" textColor="text-cream">
<div
class="w-full flex flex-col items-center gap-5 justify-center text-center text-tertiary pb-4"
>
<div class="w-full flex flex-col">
  <div class="slider">
    <div class="logos-track">
      {
        [...brands, ...brands].map((brand) => (
          <img src={"gepetin.png"} alt={brand.name} class="logo-item" />
          <img src={"tiydi.png"} alt={brand.name} class="logo-item" />
        ))
      }
    </div>
  </div>
</div>
</div>
</Section>

<style>
    .slider {
      width: 100%;
      overflow: hidden;
      position: relative;
    }
  
    .logos-track {
      display: flex;
      gap: 40px;
      animation: slide 80s linear infinite;
    }
  
    .logo-item {
      height: 50px;
      object-fit: contain;
      transition: filter 0.3s ease;
    }
  
    @keyframes slide {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-100%);
      }
    }
  </style>
  