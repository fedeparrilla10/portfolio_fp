---
const { title, subtitle, color } = Astro.props;
---

<div class="relative">
  <div
    class="absolute -top-20 left-1/2 -translate-x-1/2 w-[200px] h-[300px] bg-gradient-to-r from-[#a8dadc]/20 via-[#a8dadc]/20 to-[#a8dadc]/20 blur-3xl -z-10 rounded-full"
  >
  </div>

  <div class={`text-center relative text-${color}`}>
    <h2 class="text-4xl md:text-4xl font-bold">
      {title}
    </h2>
    <p class="text-lg md:text-xl max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>

  <div class="flex justify-center gap-3 mt-2">
    <div
      class="h-1 w-16 bg-gradient-to-r from-lightblue to-steelblue rounded-full"
    >
    </div>
    <div
      class="h-1 w-8 bg-gradient-to-r from-lightblue to-lightblue rounded-full"
    >
    </div>
    <div
      class="h-1 w-16 bg-gradient-to-r from-steelblue to-lightblue rounded-full"
    >
    </div>
  </div>
</div>
