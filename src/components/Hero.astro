---
import { Button } from "@/components/ui/button";
---

<div class="bg-cream flex flex-col">
  <main class="container mx-auto h-full px-4">
    <section
      class="min-h-[55vh] md:min-h-[60vh] flex flex-col justify-center items-center gap-8 md:gap-4 font-semibold mb-5 md:mb-0"
    >
      <div class="flex flex-col items-center gap-4 text-center">
        <h2 class="text-7xl mt-10 md:mt-0">
          <div class="flex flex-col">
            <span>Impulsa tu negocio con soluciones</span>
            <span class="bg-tertiary text-cream px-2 pt-1 pb-2 rounded mt-2.5">
              claras <span class="rotate-plus">+</span> conectadas <span
                class="rotate-plus">+</span
              > efectivas.
            </span>
          </div>
        </h2>
      </div>
    </section>
  </main>
  <img src="Wave.svg" class="divider" />
</div>

<style>
  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
    60% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  .rotate-plus {
    display: inline-block;
    animation: rotate 3s ease-in-out infinite;
  }
</style>